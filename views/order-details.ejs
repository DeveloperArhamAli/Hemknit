<%- include ('./partials/header') %>

<div class="py-14 px-4 md:px-6 2xl:px-20 2xl:container 2xl:mx-auto">

    <div class="flex justify-start item-start space-y-2 flex-col">
      <h1 class="text-3xl  lg:text-4xl font-semibold leading-7 lg:leading-9 text-gray-800">Order # <%= order._id.toString().substring(0, 11) %></h1>
      <p class="text-base font-medium leading-6 text-gray-600"><%= order.date.toLocaleTimeString() %> at <%= order.date.toDateString() %></p>
    </div>

    <div class="mt-10 flex flex-col xl:flex-row jusitfy-center items-stretch w-full xl:space-x-8 space-y-4 md:space-y-6 xl:space-y-0">

        <div class="flex flex-col justify-start items-start w-full space-y-4 md:space-y-6 xl:space-y-8">

            <div class="flex flex-col justify-start items- px-4 py-4 md:py-6 md:p-6 xl:p-8 w-full bg-white">

                <% order.products.forEach(product => { %>

                    <div class="mt-4 md:mt-6 flex flex-col md:flex-row justify-start items-start md:items-center md:space-x-6 xl:space-x-8 w-full">
        
                        <div class="pb-4 md:pb-8 w-full md:w-40">

                            <img class="w-full hidden md:block" src="data:image/jpeg;base64,<%= product.productId.image[0].toString('base64') %>" alt="product image" style="aspect-ratio: 1/1; object-fit: contain;"/>
                            <img class="w-full md:hidden" src="data:image/jpeg;base64,<%= product.productId.image.toString('base64') %>" alt="product image" style="aspect-ratio: 1/1; object-fit: contain;"/>

                        </div>
        
                        <div class="border-b border-gray-200 md:flex-row flex-col flex justify-between items-start w-full pb-8 space-y-4 md:space-y-0">

                            <div class="w-full flex flex-col justify-start items-start space-y-8">

                                <h3 class="text-xl xl:text-2xl font-semibold leading-6 text-gray-800"><%= product.productId.name %></h3>

                                <div class="flex justify-start items-start flex-col space-y-2">

                                    <p class="text-sm leading-none text-gray-800"><span class="text-gray-00">Brand: </span><%= product.productId.brand %></p>
                                    <p class="text-sm leading-none text-gray-800"><span class="text-gray-00">Quantity: </span><%= product.quantity %></p>

                                </div>

                            </div>

                            <div class="flex justify-between space-x-8 items-start w-full">

                                <p class="text-base xl:text-lg leading-6"></p>

                                
                                <p class="text-base xl:text-lg font-semibold leading-6 text-gray-800">Rs. <%= product.quantity * (product.productId.price - product.productId.discount) %></p>
                            </div>

                        </div>
        
                    </div>

                <% }) %>

            </div>

            <div class="flex justify-center flex-col md:flex-row items-stretch w-full space-y-4 md:space-y-0 md:space-x-6 xl:space-x-8">

                <div class="flex flex-col px-4 py-6 md:p-6 xl:p-8 w-full bg-white space-y-6">

                    <h3 class="text-xl font-semibold leading-5 text-gray-800">Summary</h3>

                    <div class="flex justify-center items-center w-full space-y-4 flex-col border-gray-200 border-b pb-4">

                        <div class="flex justify-between items-center w-full">

                            <p class="text-base leading-4 text-gray-800">Service</p>
                            <p class="text-base leading-4 text-gray-600">Rs: 100</p>
        
                        </div>

                    <div class="flex justify-between items-center w-full">

                        <p class="text-base leading-4 text-gray-800">Shipping</p>
                        <p class="text-base leading-4 text-gray-600">Rs: 250</p>

                    </div>

                </div>

                    <div class="flex justify-between items-center w-full">

                        <p class="text-base font-semibold leading-4 text-gray-800">Total</p>
                        <p class="text-base font-semibold leading-4 text-gray-600">Rs. <%= order.totalPrice %></p>

                    </div>

                </div>

                <div class="flex flex-col justify-center px-4 py-6 md:p-6 xl:p-8 w-full bg-white space-y-6">

                    <h3 class="text-xl font-semibold leading-5 text-gray-800">Shipping</h3>

                        <div class="flex justify-between items-start w-full">

                            <div class="flex justify-center items-center space-x-4">

                                <div class="w-8 h-8">

                                    <img class="w-full h-full" alt="logo" src="/images/delivery.png" />

                                </div>

                                <div class="flex flex-col justify-start items-center">

                                    <p class="text-lg leading-6 font-semibold text-gray-800">Fast Delivery<br /><span class="font-normal">Delivery with in 24 Hours</span></p>

                                </div>

                            </div>

                            <p class="text-lg font-semibold leading-6 text-gray-800">Rs: 250</p>

                        </div>

                </div>

            </div>

        </div>

    </div>

</div>

<%- include ('./partials/footer') %>